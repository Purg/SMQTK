                        }
                    }
                },
                "fusion": {
                    "catalysts": {
                        "dir": "Fusion/Catalysts",
                        "listing": {
                            "Average": {
                                "dir": "Average"
                            }
                        }
                    },
                    "atoms": [
                        {
                            "descriptor": "ColorDescriptor_Image_csift",
                            "indexers": [
                                "SVMIndexer_HIK"
                            ]
                        },
                        {
                            "descriptor": "ColorDescriptor_Image_opponentsift",
                            "indexers": [
                                "SVMIndexer_HIK"
                            ]
                        },
                        {
                            "descriptor": "ColorDescriptor_Image_rgsift",
                            "indexers": [
                                "SVMIndexer_HIK"
                            ]
                        }
                    ]
